{
  "compilerOptions": {
    
    "target": "es2021",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "rootDirs": [
    "./src/"
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}
